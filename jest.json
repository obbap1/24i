{
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "json"
    ],
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/test/unit/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": ["**/*.{js,jsx,tsx,ts}", "!**/node_modules/**", "!**/vendor/**"],
    "coverageReporters": ["json", "lcov"],
    "modulePaths": [
        "<rootDir>"
    ],
    "moduleNameMapper": {
        "src/(.*)": "<rootDir>/$1"
    }
}